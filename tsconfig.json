{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
    "allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"allowJs": true,
		"noImplicitAny": false
	},
	"include": [
		"src/app/shared/**/*.ts",
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"src/app",
		"./jest.config.ts"
	]
}
